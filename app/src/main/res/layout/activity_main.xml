<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
    <Button
        android:id="@+id/StartTeacherIdent"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:text="Teacher Identification"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/StartStudentIdent"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:text="Student Identification"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp" />

    <Button
        android:id="@+id/StartStudentProfile"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:text="Student Profile"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp" />

    <Button
        android:id="@+id/StartAttendance"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:text="Attendance"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/ExpectedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Expected output" />

    <ScrollView
        android:layout_width="match_parent" android:layout_height="180dp"
        android:scrollbars="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ExpectedOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:fontFamily="serif-monospace"/>
    </HorizontalScrollView>
    </ScrollView>
    <TextView
        android:id="@+id/ActualTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Actual output" />

    <ScrollView
        android:layout_width="match_parent" android:layout_height="180dp"
        android:scrollbars="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ActualOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:fontFamily="serif-monospace"/>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
