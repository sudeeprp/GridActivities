<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TeacherLoginActivity"
    tools:showIn="@layout/activity_teacher_login"
    android:background="@drawable/login_background">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_weight="1"
            />
        <TextClock
            android:id="@+id/tcTextClock"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/logo"
            android:textStyle="normal"
            android:layout_weight="1"
            android:textSize="100sp"
            android:text="@string/default_time"
            android:format12Hour="hh:mm a"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHorizantalTeacherList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tcTextClock"
            android:padding="10dp"
            android:orientation="horizontal"
            />
        <TextSwitcher
            android:id="@+id/tvSSelectedteacherName"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvHorizantalTeacherList"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:textAlignment="textStart"
            android:text="@string/unknown_teacher"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/rvHorizantalTeacherList"
            android:layout_toRightOf="@id/tvSSelectedteacherName"
            android:text="@string/login"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:text="TextView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textView"
            android:padding="5dp"
            android:text="unknown School Name"
            />
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="@string/version"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvVersion"
        android:textSize="20dp"
        android:text="Content Version N/A"/>


</RelativeLayout>